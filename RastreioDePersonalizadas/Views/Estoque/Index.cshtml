<html lang="pt-br">
<link rel="stylesheet" href="~/css/formularioDePesquisaDePedido.css" asp-append-version="true" />
<body>
    <form asp-action="Index" asp-controller="Estoque">
        <div class="form-container">

            <label for="numero-pedido">Número do Pedido</label>
            <input type="text" name="numeroDoPedido" placeholder="Digite o número do pedido." required>

            <div class="form-group">
                <label>Local da Conexão</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="localConexao" value="saojose"> São José dos Campos
                    </label>
                    <label>
                        <input type="radio" name="localConexao" value="sapucai"> Sapucaí Mirim
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label>Modelo da Chave</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="modeloChave" value="MOD1"> Modelo 1
                    </label>
                    <label>
                        <input type="radio" name="modeloChave" value="MOD2"> Modelo 2
                    </label>
                    <label>
                        <input type="radio" name="modeloChave" value="MOD4"> Modelo 4
                    </label>
                    <label>
                        <input type="radio" name="modeloChave" value="MOD5"> Modelo 5
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label>Personalizar</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="responsavel" value="Sales"> Sales
                    </label>
                    <label>
                        <input type="radio" name="responsavel" value="Eduardo"> Eduardo MG
                    </label>
                </div>
            </div>
            <input type="submit" value="Procurar Pedido" class="btn col-12" style="background-color: #e1f5fe; color: #039be5; border-radius: 8px;"/>
      
            @if (TempData["Erro"] != null)
            {             
                <div class="alert alert-danger d-flex align-items-center" role="alert" style="margin-top: 20px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                    <div>
                        @TempData["Erro"].
                    </div>
                </div>
            }
           
        </div>
    </form>
</body>
</html>